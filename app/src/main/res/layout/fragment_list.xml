<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.HomeFragment">



    <Button
        android:id="@+id/buttonLoadCash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Cash to ATM"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:onClick="loadCashToATM" />

    <Button
        android:id="@+id/buttonShowCustomerDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Customer Details"
        app:layout_constraintTop_toBottomOf="@+id/buttonLoadCash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:onClick="showCustomerDetails" />

    <Button
        android:id="@+id/buttonShowATMOperations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show ATM Operations"
        app:layout_constraintTop_toBottomOf="@+id/buttonShowCustomerDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:onClick="showATMOperations" />


</androidx.constraintlayout.widget.ConstraintLayout>